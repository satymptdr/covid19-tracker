                                                        <td style="color: red; font-weight: 600">{{this.confirmed}} <p></p><span style="color: red; font-weight: 300">{{filterZero this.deltaconfirmed}}</span></td>
                                                        <td style="color: green; font-weight: 600">{{this.recovered}} <p></p><span style="color: green; font-weight: 300">{{filterZero this.deltarecovered}}</span></td>
